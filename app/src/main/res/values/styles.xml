<resources>

    <style name="ScreenTitleTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InfoBarTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="InfoBarDescription">
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>
</resources>
